{
  "dashboard": {
    "id": null,
    "title": "The HIVE - Network Performance & Translation Latency",
    "tags": ["hive", "network", "translation", "latency"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "End-to-End Translation Latency (p95 Target: <500ms)",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 400
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            },
            "unit": "ms"
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(translation_latency_seconds_bucket[5m])) * 1000",
            "refId": "A",
            "legendFormat": "p95 End-to-End Latency"
          }
        ]
      },
      {
        "id": 2,
        "title": "Network Path Latency Breakdown",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Latency (ms)",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": true,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "ms"
          }
        },
        "targets": [
          {
            "expr": "rate(webrtc_connection_latency_ms[1m])",
            "refId": "A",
            "legendFormat": "WebRTC Connection"
          },
          {
            "expr": "rate(sfu_processing_latency_ms[1m])",
            "refId": "B", 
            "legendFormat": "SFU Processing"
          },
          {
            "expr": "rate(stt_processing_latency_ms[1m])",
            "refId": "C",
            "legendFormat": "STT Processing"
          },
          {
            "expr": "rate(mt_processing_latency_ms[1m])",
            "refId": "D",
            "legendFormat": "MT Processing"
          },
          {
            "expr": "rate(tts_processing_latency_ms[1m])",
            "refId": "E",
            "legendFormat": "TTS Processing"
          }
        ]
      },
      {
        "id": 3,
        "title": "Packet Loss Rate (Target: <2%)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "percent"
          }
        },
        "targets": [
          {
            "expr": "rate(network_packets_lost_total[5m]) / rate(network_packets_total[5m]) * 100",
            "refId": "A",
            "legendFormat": "Packet Loss Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "Network Jitter (Target: <50ms)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 150
                }
              ]
            },
            "unit": "ms"
          }
        },
        "targets": [
          {
            "expr": "network_jitter_ms",
            "refId": "A",
            "legendFormat": "Network Jitter"
          }
        ]
      },
      {
        "id": 5,
        "title": "Connection Quality Score",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 60
                },
                {
                  "color": "green",
                  "value": 80
                }
              ]
            },
            "unit": "percent"
          }
        },
        "targets": [
          {
            "expr": "connection_quality_score * 100",
            "refId": "A",
            "legendFormat": "Quality Score"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "active_webrtc_connections",
            "refId": "A",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "id": 7,
        "title": "UDP Port Usage (CoTURN)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Connections",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "never"
            },
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "coturn_allocations_active",
            "refId": "A",
            "legendFormat": "Active TURN Allocations"
          },
          {
            "expr": "coturn_relay_sessions_active",
            "refId": "B",
            "legendFormat": "Active Relay Sessions"
          }
        ]
      },
      {
        "id": 8,
        "title": "Jitter Buffer Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Buffer Level (%)",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        },
        "targets": [
          {
            "expr": "jitter_buffer_level_percent",
            "refId": "A",
            "legendFormat": "Buffer Level"
          },
          {
            "expr": "jitter_buffer_underruns_rate * 100",
            "refId": "B",
            "legendFormat": "Underrun Rate"
          },
          {
            "expr": "jitter_buffer_overruns_rate * 100",
            "refId": "C",
            "legendFormat": "Overrun Rate"
          }
        ]
      },
      {
        "id": 9,
        "title": "RED/PLC Activation Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Activation Rate (%)",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "percent"
          }
        },
        "targets": [
          {
            "expr": "red_packets_sent_rate * 100",
            "refId": "A",
            "legendFormat": "RED Packets Sent"
          },
          {
            "expr": "red_recovery_success_rate * 100",
            "refId": "B",
            "legendFormat": "RED Recovery Success"
          },
          {
            "expr": "plc_concealment_rate * 100",
            "refId": "C",
            "legendFormat": "PLC Concealment Rate"
          }
        ]
      },
      {
        "id": 10,
        "title": "Audio Quality Metrics",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 18
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Quality Score",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "max": 1,
            "min": 0,
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "audio_quality_mos_score",
            "refId": "A",
            "legendFormat": "MOS Score"
          },
          {
            "expr": "translation_accuracy_score",
            "refId": "B",
            "legendFormat": "Translation Accuracy"
          },
          {
            "expr": "voice_activity_detection_score",
            "refId": "C",
            "legendFormat": "VAD Quality"
          }
        ]
      },
      {
        "id": 11,
        "title": "Network Bandwidth Utilization",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Bandwidth (kbps)",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "Kbits"
          }
        },
        "targets": [
          {
            "expr": "rate(network_bytes_sent[1m]) * 8 / 1000",
            "refId": "A",
            "legendFormat": "Outbound"
          },
          {
            "expr": "rate(network_bytes_received[1m]) * 8 / 1000",
            "refId": "B",
            "legendFormat": "Inbound"
          },
          {
            "expr": "adaptive_bitrate_current / 1000",
            "refId": "C",
            "legendFormat": "Current Codec Bitrate"
          }
        ]
      },
      {
        "id": 12,
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "color": "red",
                    "index": 0,
                    "text": "DOWN"
                  },
                  "1": {
                    "color": "green",
                    "index": 1,
                    "text": "UP"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ]
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "background"
        },
        "targets": [
          {
            "expr": "up{job=\"livekit\"}",
            "refId": "A",
            "legendFormat": "LiveKit SFU"
          },
          {
            "expr": "up{job=\"coturn\"}",
            "refId": "B",
            "legendFormat": "CoTURN Server"
          },
          {
            "expr": "up{job=\"stt-service\"}",
            "refId": "C",
            "legendFormat": "STT Service"
          },
          {
            "expr": "up{job=\"mt-service\"}",
            "refId": "D",
            "legendFormat": "MT Service"
          },
          {
            "expr": "up{job=\"tts-service\"}",
            "refId": "E",
            "legendFormat": "TTS Service"
          }
        ]
      }
    ]
  }
}
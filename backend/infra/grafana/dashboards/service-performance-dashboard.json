          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "right"}
        },
        "targets": [
          {
            "expr": "sum by (voice_id) (rate(tts_processing_duration_seconds_count[5m]))",
            "refId": "A",
            "legendFormat": "{{voice_id}}"
          }
        ]
      },
      {
        "id": 12,
        "title": "TTS Streaming Performance",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 19},
        "fieldConfig": {

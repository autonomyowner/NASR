          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mt_processing_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mt_processing_duration_seconds_bucket[5m]))",
            "refId": "B",

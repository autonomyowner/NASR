      {
        "id": 7,
        "title": "Translation by Language Pair",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 10},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,

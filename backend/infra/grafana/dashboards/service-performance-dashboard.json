        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"mt-service\"}[5m])",
            "refId": "A",
            "legendFormat": "{{language_pair}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "MT Translation Confidence",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 10},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.6},
                {"color": "green", "value": 0.8}
              ]
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["mean"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "avg(translation_confidence_score{service=\"mt-service\"})",
            "refId": "A",
            "legendFormat": "Average Confidence"
          }
        ]
      },
      {

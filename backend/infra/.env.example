# The HIVE Translation Pipeline Environment Configuration

# Service URLs (for development - use localhost)
STT_SERVICE_URL=ws://localhost:8001/ws/stt
MT_SERVICE_URL=ws://localhost:8002/ws/translate
TTS_SERVICE_URL=ws://localhost:8003/ws/synthesize

# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_SECRET=secret

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-chars

# Model Configuration
STT_MODEL=base
STT_LANGUAGE=auto
CHUNK_DURATION_MS=250
CONTEXT_LENGTH=512

# Target Languages (comma-separated)
TARGET_LANGUAGES=es,fr,de,it,pt

# Voice Presets for TTS
VOICE_EN=en-us-female-1
VOICE_ES=es-mx-female-1
VOICE_FR=fr-fr-male-1
VOICE_DE=de-de-female-1
VOICE_IT=it-it-male-1
VOICE_PT=pt-br-female-1

# Performance Configuration
MAX_CONCURRENT_SESSIONS=4
STT_TIMEOUT_MS=5000
MT_TIMEOUT_MS=2000
TTS_TIMEOUT_MS=5000

# SLO Targets
TTFT_TARGET_MS=450
CAPTION_LATENCY_TARGET_MS=250
MAX_RETRACTION_RATE=0.05

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
METRICS_ENABLED=true
TRACING_ENABLED=true
TRACING_SAMPLING_RATE=0.1

# Security
ALLOWED_ORIGINS=https://localhost:3000,https://localhost:5173
TOKEN_EXPIRY_HOURS=24

# Docker Environment Overrides (for containerized services)
# STT_SERVICE_URL=ws://stt-service:8001/ws/stt
# MT_SERVICE_URL=ws://mt-service:8002/ws/translate  
# TTS_SERVICE_URL=ws://tts-service:8003/ws/synthesize
# LIVEKIT_URL=ws://livekit:7880
# REDIS_URL=redis://redis:6379